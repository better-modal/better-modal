{
    "name": "better-modal",
    "description": "A type-safe modal manager for React.",
    "version": "0.3.1",
    "license": "MIT",
    "author": "jln13x",
    "repository": {
        "type": "git",
        "url": "https://github.com/better-modal/better-modal.git",
        "directory": "packages/better-modal"
    },
    "scripts": {
        "build": "tsdown",
        "dev": "tsdown --watch",
        "lint": "tsc --noEmit",
        "test": "vitest",
        "test:run": "vitest run",
        "test:ui": "vitest --ui"
    },
    "peerDependencies": {
        "@types/react": ">=19",
        "react": ">=19",
        "react-dom": ">=19",
        "typescript": ">=5.7"
    },
    "devDependencies": {
        "@standard-schema/spec": "^1.0.0",
        "@testing-library/jest-dom": "^6.6.3",
        "@testing-library/react": "^16.1.0",
        "@types/react": "^19.1.16",
        "@types/react-dom": "^19.1.9",
        "@vitest/ui": "^2.1.8",
        "effect": "^3.18.1",
        "jsdom": "^25.0.1",
        "nuqs": "2.6.0",
        "tsdown": "^0.15.4",
        "type-fest": "^5.0.1",
        "typescript": "catalog:",
        "vitest": "^2.1.8",
        "free-types": "^0.12.0"
    },
    "exports": {
        "./package.json": "./package.json",
        ".": {
            "import": {
                "types": "./dist/index.d.mts",
                "default": "./dist/index.mjs"
            },
            "require": {
                "types": "./dist/index.d.cts",
                "default": "./dist/index.cjs"
            }
        },
        "./react": {
            "import": {
                "types": "./dist/react/index.d.mts",
                "default": "./dist/react/index.mjs"
            },
            "require": {
                "types": "./dist/react/index.d.cts",
                "default": "./dist/react/index.cjs"
            }
        },
        "./rsc": {
            "import": {
                "types": "./dist/rsc/index.d.mts",
                "default": "./dist/rsc/index.mjs"
            },
            "require": {
                "types": "./dist/rsc/index.d.cts",
                "default": "./dist/rsc/index.cjs"
            }
        },
        "./plugins": {
            "import": {
                "types": "./dist/plugins/index.d.mts",
                "default": "./dist/plugins/index.mjs"
            },
            "require": {
                "types": "./dist/plugins/index.d.cts",
                "default": "./dist/plugins/index.cjs"
            }
        }
    }
}